@page "/edit/{id:int}"
@using Microsoft.AspNetCore.Http.HttpResults
@inject IUnitOfWork unitOfWork
@if (Note != null)
{
    <h3>EditNote</h3>
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <EditForm Model=@Note OnValidSubmit="Update">
                <DataAnnotationsValidator/>
                <div class="form-group">
                    <label for="Title" class="control-label">Title</label>
                    <input @bind=Note.Title class="form-control" name="Title" id="Title"/>
                    <ValidationMessage For=@(() => Note.Title)/>
                </div>
                <div class="form-group">
                    <label for="Description" class="control-label">Description</label>
                    <textarea @bind="Note.Description"  class="form-control" id="Description" > </textarea>
                    <ValidationMessage For=@(() => Note.Description)/>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary"/>
                </div>
            </EditForm>
        </div>
    </div>

    <div>
        <a href="/">Back to List</a>
    </div>
}
else
{
    <NotFound></NotFound>
}

@code {
    [Parameter]
    public int Id { get; set; }
    public Note Note;
    protected override void OnInitialized()
    {
        Note = unitOfWork.NotesRepository.GetNoteById(Id);
    }

    public void Update()
    {
        unitOfWork.NotesRepository.Update(Note);
    }

}